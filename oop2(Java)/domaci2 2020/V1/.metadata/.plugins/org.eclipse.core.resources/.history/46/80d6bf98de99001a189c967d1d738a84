package raspored;

public class Vreme
{
    private int sat;
    private int min;
    
    public Vreme(int s, int m) throws GVreme {
        if (s < 0 || s > 23 || m < 0 || m > 59 || (m % 15 != 0)) {
            throw new GVreme();
        }
        
        sat = s;
        min = m;
    }
    
    public Vreme() {
        sat = 0;
        min = 0;
    }
    
    public boolean jednakovreme(Vreme v2) {
        return this.min == v2.min && this.sat == v2.sat;
    }
    
    public static Vreme saberi(Vreme vreme,Vreme vreme2) throws GVreme {
       int sati=vreme.sat+vreme2.sat;
       int mini=vreme.min+vreme2.min;
       if(mini>=60) {mini=mini-60; sati++; }
       return new Vreme(sati,mini);
	    
   
}
    public  int vrememin() {
    	return sat*60+min;
    }
    public String toString() {
    	return "("+sat+":"+min+")";
    }
    }